<p id="notice"><%= notice %></p>

  <% if user_signed_in? && current_user.role == "Admin" %>


<h1 class="center">Admin CP</h1>

<table class="table">
  <thead>
    <tr>
      <td>User ID</td>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Scholarship ID</th>
      <th>Link to User Scholarship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.scholarship_id %></td>
        <td></td>
        <td><%= link_to 'Show', user, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning", style: "color:white" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you wish to delete this user? This cannot be undone.' }, class: "btn btn-danger", style: "color:white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <% elsif user_signed_in? && current_user.role == "User" %>
  <h1 class="center">Account Settings</h1>

  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= current_user.first_name %></td>
        <td><%= current_user.last_name %></td>
        <td><%= current_user.email %></td>
      </tr>
    </tbody>
  </table>
  <% end %>



<br>

<% if user_signed_in? && current_user.role == "Admin" %>
<%= link_to 'New User', new_user_path, class: "btn btn-primary", style: "color:white" %>
<% end %>


