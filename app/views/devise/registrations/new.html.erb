<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :style=> "width: 200px;" %>
  </div>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true, :style=> "width: 200px;" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, :style=> "width: 200px;" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :style=> "width: 200px;" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", :style=> "width: 200px;" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
