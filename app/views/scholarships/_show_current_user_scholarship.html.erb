<% if user_signed_in? && current_user.role == "User" %>

<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>State</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= current_user.scholarship.name %></td>
        <td><%= current_user.scholarship.gender %></td>
        <td><%= current_user.scholarship.date_of_birth %></td>
        <td><%= current_user.scholarship.state %></td>
        <td><%= current_user.scholarship.university %></td>
        <td><%= link_to 'Show', current_user.scholarship, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Edit', edit_scholarship_path(current_user.scholarship), class: "btn btn-warning", style: "color:white" %></td>
        <td><%= link_to 'Destroy', current_user.scholarship, method: :delete, data: { confirm: 'Are you sure you wish to delete this scholarship? This cannot be undone.' }, class: "btn btn-danger", style: "color:white" %></td>
      </tr>
  </tbody>
</table>


<% end %>